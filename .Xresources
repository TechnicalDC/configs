!! COLOR SCHEME 

! special
#define FOREGROUND 	#ddd
#define BACKGROUND	#222
#define HIGHLIGHT 	#0f5ff9

! black
#define COLOR0		#1b1918
#define COLOR8		#766e6b
! red
#define COLOR1		#f22c40
#define COLOR9		#f22c40
! green
#define COLOR2		#5ab738
#define COLOR10		#5ab738
! yellow
#define COLOR3		#d5911a
#define COLOR11		#d5911a
! blue
#define COLOR4		#407ee7
#define COLOR12		#407ee7
! magenta
#define COLOR5		#6666ea
#define COLOR13		#6666ea
! cyan
#define COLOR6		#00ad9c
#define COLOR14		#00ad9c
! white
#define COLOR7		#a8a19f
#define COLOR15		#f1efee

! special
*.foreground:   FOREGROUND
*.background:   BACKGROUND
*.cursorColor:	HIGHLIGHT  

! black
*.color0:       COLOR0
*.color8:       COLOR8

! red
*.color1:       COLOR1
*.color9:       COLOR9

! green
*.color2:       COLOR2
*.color10:      COLOR10

! yellow
*.color3:       COLOR3
*.color11:      COLOR11

! blue
*.color4:       COLOR4
*.color12:      COLOR12

! magenta
*.color5:       COLOR5
*.color13:      COLOR13

! cyan
*.color6:       COLOR6
*.color14:      COLOR14

! white
*.color7:       COLOR7
*.color15:      COLOR15

!!  XFONTS CONFIG
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgba
Xft.autohint: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcdfilter

!! UXTERM CONFIGURATION
UXTerm*renderFont: true
UXTerm*faceName: xft:Fira Code Medium:style=Regular:pixelsize=12
UXTerm*faceSize: 10
UXTerm*utf8: 2
UXTerm*locale: true
UXTerm*savelines: 5120

!! XTERM CONFIGURATION
XTerm*renderFont: true
XTerm*faceName: xft:Fira Code Medium:style=Regular:pixelsize=12
XTerm*faceSize: 10
XTerm*utf8: 2
XTerm*locale: true
XTerm*savelines: 5120

!! URXVT CONFIGGURATION
!! URxvt Appearance
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 16
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 5120
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

!! URvxt Font
URxvt.font: xft:Fira Code Medium:style=Regular:pixelsize=12
URxvt.boldFont: xft:Fira Code Medium:style=Bold:pixelsize:12


!!  Extensions
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,font-size
!URxvt.keysum.Control-equal: font-size:bigger
!URxvt.keysum.Control-minus: font-size:smaller
!URxvt.keysum.Control-0: font-size:reset
!URxvt.keysum.C-question: font-size:show
URxvt.font-size.step: 2
!URxvt.copyCommand: xclip -i -selection clipboard
!URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.C-S-c: perl:clipboard:copy
URxvt.keysym.C-S-v: perl:clipboard:paste
! URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! URxvt.keysym.M-Escape: perl:keyboard-select:activate
! URxvt.keysym.M-s: perl:keyboard-select:search
! URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1
