[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
alert = ${xrdb:color1}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

line-size = 2
line-color = #f00

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 3
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = fixed:pixelsize=9;1
font-1 = "Fira Code Medium:fontformat=truetype:size=9:antialias=false";0

modules-left = bspwm i3 xwindow
modules-right =  pulseaudio cpu memory temperature date powermenu reload

tray-position = right
tray-padding = 3
tray-background = ${colors.background}

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
;cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = "|  %title:0:40:...%"
label-foreground = ${colors.foreground}
label-padding = 1
;label-margin = 1

[module/xkeyboard]
;type = internal/xkeyboard
;blacklist-0 = num lock

;format-prefix = " "
;format-prefix-foreground = ${colors.foreground}
;format-prefix-underline = ${colors.background}

;label-layout = %layout%
;label-layout-background =  #a36ac7
;label-layout-underline = ${colors.secondary}

;label-layout-padding = 0
;label-layout-margin = 0
;label-indicator-margin = 0
;label-indicator-background = ${colors.background}
;label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
